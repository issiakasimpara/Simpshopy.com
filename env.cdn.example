# ðŸš€ CONFIGURATION CDN CLOUDFLARE R2
# Copiez ce fichier vers .env.local et remplissez vos valeurs

# Configuration R2
R2_ACCESS_KEY_ID=your_r2_access_key_here
R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
R2_BUCKET_NAME=simpshopy-assets
R2_ACCOUNT_ID=your_cloudflare_account_id_here

# URLs CDN
CDN_BASE_URL=https://simpshopy.com
R2_PUBLIC_URL=https://simpshopy-assets.YOUR_ACCOUNT_ID.r2.cloudflarestorage.com

# Configuration Cloud Connector
CLOUD_CONNECTOR_ENABLED=true
CDN_COMPRESSION_ENABLED=true
CDN_WEBP_CONVERSION=true
CDN_LAZY_LOADING=true

# Cache Settings
STATIC_ASSETS_CACHE=31536000
STORE_ASSETS_CACHE=2592000
PRODUCT_IMAGES_CACHE=604800
TEMPLATE_ASSETS_CACHE=2592000

# Performance Targets (en millisecondes)
TARGET_STATIC_LOAD_TIME=50
TARGET_STORE_LOAD_TIME=100
TARGET_PRODUCT_LOAD_TIME=150
TARGET_TEMPLATE_LOAD_TIME=200
